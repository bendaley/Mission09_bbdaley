@{
}

@model Book

<!-- page that displays all the books & allows for navigation -->

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge bg-primary rounded-pill" style="float:right;">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    
    <div class="card-text p-1">
        <ul>
            <li>Book ID: @Model.BookId</li>
            <li>Author: @Model.Author</li>
            <li>Publisher: @Model.Publisher</li>
            <li>Isbn: @Model.Isbn</li>
            <li>Classification: @Model.Classification</li>
            <li>Category: @Model.Category</li>
            <li>PageCount: @Model.PageCount</li>
        </ul>


    </div>

    <form method="post" asp-page="/Shop">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <!-- extra bootstrap #1 -->
        <span class="card-text btn-group float-end">
            <button type="button" class="btn btn-secondary" color="red">Press this button if you want nothing to happen</button>
            <button type="submit" class="btn btn-success btn-sm float-end">Add to Cart</button>
        </span>
    </form>
</div>


