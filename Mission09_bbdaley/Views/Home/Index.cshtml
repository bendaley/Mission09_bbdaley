@model BooksViewModel
<!--<h1>atViewBag.Calc</h1>-->

<h1>The Bookstore</h1>

<!-- some new styling and display of book info -->
@foreach (Book b in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @b.Title
            <span class="badge bg-primary rounded-pill" style="float:right;">
                <small>@b.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        <ul>
            <li>Book ID: @b.BookId</li>
            <li>Author: @b.Author</li>
            <li>Publisher: @b.Publisher</li>
            <li>Isbn: @b.Isbn</li>
            <li>Classification: @b.Classification</li>
            <li>Category: @b.Category</li>
            <li>PageCount: @b.PageCount</li>            
        </ul>
    </div>
</div>
}

<div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

